---
import Badge from '../components/Badge.astro';
import EddBot from '../components/EddBot/index';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
import Section from '../components/Section.astro';
import SocialPill from '../components/SocialPill.astro';
import BriefcaseIcon from '../components/icons/Briefcase.astro';
import ChatbotIcon from '../components/icons/Chatbot.astro';
import CodeIcon from '../components/icons/Code.astro';
import FileTypePdf from '../components/icons/FileTypePdf.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import MailIcon from '../components/icons/Mail.astro';
import Layout from '../layouts/Layout.astro';

const yearsOfExperience = new Date().getFullYear() - 2021;
const experience = `${yearsOfExperience} ${yearsOfExperience === 1 ? 'year' : 'years'}`;
---

<Layout title={`Edgar Benavides - Full Stack Developer with ${experience} of experience`} description="Creative collaborator ready to boost business projects. Expert in Web Applications Development. Connect to transform ideas into reality!">
	<main>
		<Section id="about" class="pt-10 lg:pt-24 flex md:flex-row items-center gap-10 md:gap-0">
			<div>
				<h1 class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row flex-wrap gap-4 pb-6 lg:pb-10">
					Hey, I'm Edgar
					<a aria-label="Connect with Edgar Benavides on LinkedIn" href="https://linkedin.com/in/edgarbenavides" target="_blank" rel="noopener" class="flex w-fit lg:justify-center items-center">
						<Badge>Available for collaborate</Badge>
					</a>
				</h1>
	
				<h2 class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white">
					<span>{experience} of experience.</span> <span class="text-yellow-600 dark:text-yellow-200">Full Stack Developer.</span> <span class="text-sky-800 dark:text-sky-200">Based in MÃ©xico.</span> <span class="opacity-70">Focused on writing clean and efficient code.</span>
				</h2>
	
				<nav class="flex gap-4 mt-8 flex-wrap">
					<SocialPill type="primary" href="https://drive.google.com/file/d/1-E8bXqbnMnYBRYc68ER7GYWi0pOfBF-Q/view?usp=sharing" aria-label="Read and download my resume">
						<FileTypePdf class="size-6" />
						Resume
					</SocialPill>
					<SocialPill href="https://linkedin.com/in/edgarbenavides" aria-label="Connect with me on LinkedIn">
						<LinkedInIcon class="size-6" />
						LinkedIn
					</SocialPill>
					<SocialPill href="https://github.com/Edd27" aria-label="See my projects on GitHub">
						<GitHubIcon class="size-6" />
						GitHub
					</SocialPill>
					<SocialPill href="mailto:contacto@edgarbenavides.dev" aria-label="Send me a mail for more information">
						<MailIcon class="size-6" />
						contacto@edgarbenavides.dev
					</SocialPill>
				</nav>
			</div>
			<div>
				<img src="/me-funko-pop.png" alt="Funko Pop figure of Edgar Benavides" class="w-full h-full object-contain"/>
			</div>
		</Section>

		<Section id="eddbot">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
				<ChatbotIcon class="size-7"/>
				EddBot
			</h2>
			<EddBot client:load/>
		</Section>

		<Section id="experience" class="pt-4 lg:pt-24">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
				<BriefcaseIcon class="size-7"/>
				Experience
			</h2>
			<Experience />
		</Section>

		<Section id="projects" class="pt-4 lg:pt-24 pb-4 lg:pb-24">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
				<CodeIcon class="size-7"/>
				Projects
			</h2>
			<Projects />
		</Section>
	</main>
</Layout>
