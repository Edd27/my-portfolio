  },
  TAILWINDCSS: {
    name: 'Tailwind CSS',
    classes: 'bg-sky-500/30 opacity-80',
    icon: "TailwindCss"
    
  },
  REACT: {
    name: 'React',
    classes: 'bg-sky-500/30 opacity-80',
    icon: "React"
  }
}

const PROJECTS = [
  {
    title: 'Cocktails recipes',
    description: 'A web application to search for cocktail recipes. The application was made with React and Tailwind CSS.',
    link: 'https://cocktails.edgarbenavides.dev/',
    github: null,
    image: '/projects/cocktails.webp',
    tags: [TAGS.TAILWINDCSS, TAGS.REACT]
  },
  {
    title: 'Christmas bonus calculator from Mexico',
    description: 'A web application to calculate the Christmas bonus from Mexico. The application was made with React and Tailwind CSS.',
    link: 'https://miaguinaldo.edgarbenavides.dev/',
    github: null,
    image: '/projects/miaguinaldo.webp',
    tags: [TAGS.TAILWINDCSS, TAGS.REACT]
  },
  {
    title: 'Landing Page - Taquizas El Garage',
