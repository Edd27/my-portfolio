---
import type { Tag } from "../type";
const {title, description, tags, image, link} = Astro.props;
---
<article class="mb-16 lg:mb-24">
  <h3 class="text-2xl font-semibold text-yellow-600 dark:text-yellow-200 mb-2">{title}</h3>
  <p class="text-lg mb-4 text-pretty opacity-80">{description}</p>
  <ul class="flex gap-x-2 flex-row mb-2">
    {tags.map((tag: Tag) => (
      <li>
        <span class={`flex gap-x-2 rounded-full text-xs py-1 px-2 items-center ${tag.class}`}>
          <tag.icon class="size-4"/>
          {tag.name}
        </span>
      </li>
    ))}
  </ul>
  <div class="rounded-xl shadow-2xl shadow-white/10 overflow-hidden relative">
    <img class="w-full h-full object-cover" src={image} alt={`Captura de pantalla del proyecto ${title}`}/>
    <a href={link} target="_blank" rel="noopener" class="absolute top-0 left-0 w-full h-full hover:backdrop-brightness-75 flex items-center justify-center transition duration-300" />
  </div>
</article>